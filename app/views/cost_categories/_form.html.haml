= simple_form_for(@cost_category) do |f|
  .row
    .col-lg-6
      = f.error_notification
      %fieldset
        = f.input :name, input_html: { class: 'form-control', placeholder: 'Cost category title' }
        = f.input :description, input_html: { class: 'form-control', placeholder: 'Cost category description' }
      .actions
        = f.submit 'Save', class: 'btn btn-success'
