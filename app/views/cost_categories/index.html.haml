.row
  .col-lg-12
    %h1.page-header Cost categories
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading  Cost categories list
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th Name
                %th Description
                %th Actions
            %tbody
              - @cost_categories.each do |cost_category|
                %tr
                  %td= cost_category.name
                  %td= cost_category.description
                  %td
                    = link_to 'Edit', edit_cost_category_path(cost_category)
                    = link_to 'Destroy', cost_category, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Cost category', new_cost_category_path, class: 'btn btn-success'
