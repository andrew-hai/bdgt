= simple_form_for income, defaults: { input_html: { :class => 'form-control' } } do |f|
  .row
    .col-lg-6
      = f.error_notification
      %fieldset
        = f.input :name
        = f.input :amount
        = f.input :description
        = f.input :got_on
      .actions
        = f.submit t(:save), class: 'btn btn-success'
