.row
  .col-lg-6
    %h2.page-header= t(:dashboard)

.row.visible-xs-block.form-group
  .col-lg-12
    = link_to new_cost_path, class: 'btn btn-success btn-lg btn-block' do
      %i.fa.fa-plus
      = t(:add_new_cost)

.row
  .col-lg-12
    .panel.panel-default
      .panel-heading= t(:costs_list)
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th Name
                %th Category
                %th Amount
                %th Description
                %th Spent on
                %th User
            %tbody
              - @costs.each do |cost|
                %tr
                  %td= cost.name
                  %td= cost.cost_category.name
                  %td= cost.amount
                  %td= cost.description
                  %td= cost.spent_on
                  %td= cost.user.try(:username)
