.row
  .col-lg-12
    .panel.panel-default
      .panel-heading  Costs list
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th Name
                %th Category
                %th Amount
                %th Description
                %th Spent on
                %th User
            %tbody
              - @costs.each do |cost|
                %tr
                  %td= cost.name
                  %td= cost.cost_category.name
                  %td= cost.amount
                  %td= cost.description
                  %td= cost.spent_on
                  %td= cost.user.try(:username)
