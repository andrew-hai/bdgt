.row
  .col-lg-12
    .panel.panel-default
      .panel-heading= t(:funds_list)
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th= t(:name)
                %th= t(:amount)
                %th= t(:currency)
                %th= t(:description)
                %th= t(:actions)
            %tbody
              - @funds.each do |fund|
                %tr
                  %td= "#{fund.name} (#{fund.currency})"
                  %td= fund.amount
                  %td= fund.currency
                  %td= fund.description
                  %td
                    = link_to edit_fund_path(fund), title: t(:edit) do
                      %i.fa.fa-pencil.fa-fw
                    = link_to fund, method: :delete, title: t(:destroy), data: { confirm: t(:a_u_sure) } do
                      %i.fa.fa-trash-o.fa-fw
