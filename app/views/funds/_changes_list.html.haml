.row
  .col-lg-12
    .panel.panel-default
      .panel-heading= t(:fund_changes_list)
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th= t(:name)
                %th= t(:amount)
                %th= t(:type)
            %tbody
              - @fund_changes.each do |change|
                %tr
                  %td= change.fund.name
                  %td= change.amount
                  %td= t("fund_changes.#{change.fc_type}")
