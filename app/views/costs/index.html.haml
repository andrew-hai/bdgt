#page-wrapper
  .row
    .col-lg-12
      %h1.page-header Costs
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading  Context Classes
        .panel-body
          .table-responsive
            %table.table
              %thead
                %tr
                  %th Name
                  %th Amount
                  %th Description
                  %th Spent on
                  %th User
                  %th Actions
              %tbody
                - @costs.each do |cost|
                  %tr
                    %td= cost.name
                    %td= cost.amount
                    %td= cost.description
                    %td= cost.spent_on
                    %td= cost.user.try(:username)
                    %td
                      = link_to 'Edit', edit_cost_path(cost)
                      = link_to 'Destroy', cost, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Cost', new_cost_path, class: 'btn btn-success'
