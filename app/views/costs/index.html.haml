.row
  .col-lg-12
    %h2.page-header= t(:costs)
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading= t(:costs_list)
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th= t(:name)
                %th= t(:category)
                %th= t(:amount)
                %th= t(:description)
                %th= t(:spent_on)
                %th= t(:user)
                %th= t(:actions)
            %tbody
              - @costs.each do |cost|
                %tr
                  %td= cost.name
                  %td= cost.cost_category.name
                  %td= cost.amount
                  %td= cost.description
                  %td= cost.spent_on
                  %td= cost.user.try(:username)
                  %td
                    = link_to t(:edit), edit_cost_path(cost)
                    = link_to t(:destroy), cost, method: :delete, data: { confirm: t(:a_u_sure) }
    = link_to new_cost_path, class: 'btn btn-success' do
      %i.fa.fa-plus
      = t(:add_new_cost)
