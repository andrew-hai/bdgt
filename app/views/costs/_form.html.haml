= simple_form_for @cost, defaults: { input_html: { :class => 'form-control' } } do |f|
  .row
    .col-lg-6
      = f.error_notification
      %fieldset
        = f.input :name
        = f.input :cost_category_id, collection: @categories, prompt: :translate
        = f.input :amount
        = f.input :description
        = f.input :spent_on
      .actions
        = f.submit t(:save), class: 'btn btn-success'
